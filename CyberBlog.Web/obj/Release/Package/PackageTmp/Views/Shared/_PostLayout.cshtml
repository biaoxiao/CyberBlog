@{
	Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@RenderSection("Styles", false)
<div class="row">
	<div id="blog-left" class="col-sm-8">
		@RenderBody()
	</div>
	<div id="blog-right" class="col-sm-3 col-sm-offset-1">
		<div id="categories-nav">
			@{Html.RenderAction("Categories", "Post");}
		</div>
		<div id="tags-nav">
			@{Html.RenderAction("Tags", "Post");}
		</div>

	</div>
</div>
@RenderSection("Scripts", required: false)